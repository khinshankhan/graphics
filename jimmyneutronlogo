@sphere
sphere
0 0 0 100
#rotate 90 degrees about y to check lines
ident
rotate
y 90
move
250 250 0
apply
#reset sphere, rotate 90 degrees about x to check lines
ident
move
-250 -250 0
rotate
y -90
rotate
x 90
move
250 250 0
apply
#reset sphere, rotate to make it look cool
ident
move
-250 -250 0
rotate
x -60
rotate
y 20
rotate
z 70
move
250 250 0
apply
empty
logo.ppm
clear

